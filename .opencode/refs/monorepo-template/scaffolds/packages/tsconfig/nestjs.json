{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@app/core/*": ["src/core/*"],
      "@app/modules/*": ["src/modules/*"],
      "@app/shared/*": ["src/shared/*"]
    }
  }
}