{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    "allowJs": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "src/*"
      ],
      "@app/components/*": [
        "src/components/*"
      ],
      "@app/lib/*": [
        "src/lib/*"
      ],
      "@app/hooks/*": [
        "src/hooks/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}